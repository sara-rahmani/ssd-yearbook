  <h2>Profiles</h2>
</div>
<div class="profile-list">
  <div class="profile-list-header">
    <form id="profile-search" action="/user" method="GET">
      <input type="text" name="search" id="search" placeholder="Search by Name" value="<%= search %>">
      <select name="selectFilter">
        <optgroup label="Select Filter">
            <option name="firstName" value="firstName">firstName</option>
            <option name="lastName" value="lastName">lastName</option>
            <option name="email" value="email">email</option>
            <option name="interests" value="interests">interests</option>
            <option name="username" value="username">username</option>
        </optgroup>
    </select>
      <button type="submit">Search</button>
    </form>
  </div>
  <ul class="alternating-rows">
    <li>
      <a href="/user/<%= profileId %>"> â˜† My Profile</a>
