<div class="section-header">
  <h2>Profiles</h2>
</div>
<div class="profile-list">
  <div class="profile-list-header">
    <form id="profile-search" action="/profiles" method="GET">
      <input type="text" name="search" id="search" placeholder="Search by Name" value="<%= search %>">
      <button type="submit">Search</button>
    </form>
    <a href="/profiles/edit"><button class="create">New Profile</button></a>
  </div>
  <ul class="alternating-rows">
    <% for (let i = 0; i < profiles.length; i++ ) {%>
    <li>
      <a href="/profiles/<%= profiles[i].id %>"><%= profiles[i].name %></a>
      <a href="/profiles/<%= profiles[i].id %>/delete"><button class="delete">Delete</button></a>
    </li>
    <% } %>
  </ul>
</div>
